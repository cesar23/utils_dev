{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.vscode": false
  },
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.bracketPairColorization.enabled": true,
  "liveServer.settings.root": "/web_static",

  "code-runner.executorMap": {
    "javascript": "\"C:\\Program Files\\nodejs\\node.exe\"",
    "python": "python.exe",
    "php": "\"C:\\laragon\\bin\\php\\php-8.2.25-Win32-vs16-x64\\php.exe\"",
    "java": "javac",
    "c": "gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "cpp": "g++ $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "shellscript": "\"C:\\Program Files\\Git\\bin\\bash.exe\"",
    "powershell": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe -ExecutionPolicy ByPass -File"
  },
  //=============================
  // üìù Local History
  //=============================
  // üîÅ N√∫mero de d√≠as que se guardar√°n los historiales locales.
  // Despu√©s de este l√≠mite, los archivos antiguos ser√°n eliminados autom√°ticamente.
  // Pon 0 si no deseas borrar nunca.
  "local-history.daysLimit": 15,

  // üëÅÔ∏è Cantidad m√°xima de archivos que se mostrar√°n en la lista visual de historial.
  // No afecta cu√°ntos se guardan realmente, solo lo visible en los men√∫s del plugin.
  "local-history.maxDisplay": 20,

  // ‚è≥ Tiempo (en segundos) de retraso antes de guardar una copia del historial
  // tras haber guardado el archivo en VSCode. √ötil si haces muchos guardados r√°pidos.
  // 0 = sin retraso.
  "local-history.saveDelay": 0,

  // üåê Formato regional para mostrar las fechas en el historial.
  // Ejemplo: "es-PE" (Espa√±ol Per√∫), "en-US" (Ingl√©s EE.UU.), "fr-FR" (Franc√©s).
  "local-history.dateLocale": "es-PE",

  // üìÇ Carpeta donde se almacenar√°n los historiales.
  // Puedes usar rutas absolutas (como D:/historiales/vscode) o variables.
  // Aqu√≠ usamos la carpeta .vscode dentro del proyecto actual.
  "local-history.path": "${workspaceFolder}/.vscode/.history",

  // üß≠ Define si se guardar√°n los archivos en ruta absoluta o relativa.
  // true: guarda como <path>/.history/C:/mi_proyecto/archivo.js
  // false (recomendado): guarda como <path>/.history/mi_proyecto/archivo.js
  "local-history.absolute": false,

  // üîå Controla cu√°ndo se activa el plugin:
  // 0 = nunca guardar historial,
  // 1 = siempre guardar (incluso si no hay carpeta de proyecto),
  // 2 = solo guardar si est√°s en un workspace abierto.
  "local-history.enabled": 2,

  // üö´ Lista de carpetas o archivos que quieres excluir del historial.
  // Usa patrones glob. Ideal para carpetas grandes o irrelevantes como node_modules.
  "local-history.exclude": [
    "**/.history/**",       // No guardar cambios en la carpeta del historial
    "**/.vscode/**",        // Excluir archivos internos de configuraci√≥n
    "**/node_modules/**",   // No guardar dependencias
    "**/wp-includes/**",   // No guardar dependencias
    "**/dist/**",           // Evitar archivos compilados
    "**/out/**"             // Archivos de salida del proyecto
  ]
}
